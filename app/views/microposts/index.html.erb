<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Microposts" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Microposts</h1>
    <%= link_to "New micropost", new_micropost_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="microposts" class="min-w-full">
    <% @microposts.each do |micropost| %>
      <%= render micropost %>
      <p>
        <%= link_to "Show this micropost", micropost, class: "ml-2 rounded-lg py-3 px-5 bg-[#1E283A] inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
