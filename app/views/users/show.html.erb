<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p
        class="
          py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block
        "
        id="notice"
      ><%= notice %></p>
    <% end %>

    <%= render @user %>

    <div id="user_microposts" class="min-w-full pb-5">
      <h2 class='font-medium pb-2 text-md'>Posts:</h2>
      <% if @user_microposts.empty? %>
        <p class='text-white'>The user hasn't written any posts.</p>
      <% else %>
        <div class='rounded-lg bg-[#293449]'>
          <% @user_microposts.each do |user_micropost| %>
            <div class='px-2 py-5'>
              <p><%= user_micropost.content %></p>
              <p class='text-sm text-[#7DD3FC]'><%= user_micropost.created_at %></p>
              <div class='flex gap-2 font-medium'>
                <%= link_to "Edit",
                edit_micropost_path(user_micropost),
                class: "text-sm text-gray-500 underline pt-3 hover:text-[#1D9AF1]" %>
                <%= button_to "Destroy",
                user_micropost,
                method: :delete,
                class: "text-sm text-gray-500 underline pt-3 hover:text-red-800" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%= link_to "Edit this user",
    edit_user_path(@user),
    class: "mt-2 rounded-lg py-3 px-5 bg-[#1E283A] inline-block font-medium" %>
    <%= link_to "Back to users",
    users_path,
    class: "ml-2 rounded-lg py-3 px-5 bg-[#1E283A] inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this user",
      @user,
      method: :delete,
      class: "mt-2 rounded-lg py-3 px-5 bg-[#1E283A] font-medium" %>
    </div>
  </div>
</div>
